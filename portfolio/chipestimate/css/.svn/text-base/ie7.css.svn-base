/*** IE 7 ***/
.header {
	position: relative;
	z-index: 1;
}

.header-top div{
	position: relative;
	z-index: 10000;
}

.header .header-nav {
	position: relative;
	z-index: 10000;
	width: 300px;
}
.header .header-nav ul#nav-account {
	position: absolute;
	bottom: 50px;
	left: 160px;
	margin: 0;
	z-index: 11;
}
.header .header-nav ul#nav-library {
	position: relative;
	bottom: 15px;
	margin: 0;
	z-index: 10;
}
.header .header-nav ul#nav-account ul.dropdown-menu {
	margin-top: 20px;
	margin-left: -100px;
	z-index: 10001;
}
.header .header-nav ul#nav-library ul.dropdown-menu {
	margin-top: 20px;
	margin-left: -100px;
	z-index: 10000;
}
.header #search {
	width: 60%;
	margin: 0;
}
.header #search input { width: 80%; }

/* Advanced Dropdown Buttons */
.header #advanced-dropdowns {
	padding-top: 8px;
	float: right;
	margin: 0;
}
.header #advanced-dropdowns ul li a div { float: left; }
.header #advanced-dropdowns ul li,
.header #advanced-dropdowns ul li a { cursor: pointer; }
.header #drop-btn-advanced,
.header #drop-btn-concierege {
	position: relative;
	width: 140px;
    height: 30px;
    margin: 0 auto;
    padding: 4px 0 0 0;
    font-size: 16px;
    font-weight: 700;
    text-indent: -20px;
    text-align: center;
    color: #666;
	text-shadow: 1px 1px #f8f8f8;
}
.header #drop-btn-advanced, .header #drop-btn-concierege {
	background: url('../img/btn_header_advanced_drop_btn.png') no-repeat;
}

.column .col-header {
    height: 68px;
    margin: 0 auto;
    width: 289px;
    position:relative;
    z-index: 10000;
    overflow: visible;
}
.column .col-learn-content, .col-read-content, .col-watch-content, .col-latest-content, .col-industry-content {
	background: none repeat scroll 0 0 #FFFFFF;
    margin: -34px auto 0;
    padding: 55px 0 10px 0;
    width: 320px;
    position: relative;
    z-index: 1;
}
.column .col-read-content .dashed-divider {
	width: 100%;
	padding: 4px 0;
	border-bottom: 1px dashed #ccc;
}

/* Industry News Column */
.column .col-industry-content ul {padding: 0 10px; }
.column .col-industry-content ul li { margin-bottom: 5px; }
.column .col-industry-content li.title-small { margin-bottom: 1px; }
.column .col-industry-content li.dashed-divider {
	width: 90%;
	height: 1px;
	margin: 5px 0 0 0;
	border-bottom: 1px dashed #ccc;
}

/* ....................................................................................*/ 
/*** concierge and advanced dropdowns ***/
/* ....................................................................................*/ 
.column {
	z-index: -1;
}
.column .col-header-learn,
.column .col-header-read,
.column .col-header-watch,
.column .col-header-latest,
.column .col-header-industry {
	position:relative;
    z-index: 2;
    overflow: visible;
}
.column .col-learn-content, .col-read-content, .col-watch-content, .col-latest-content, .col-industry-content {
	position:relative;
    z-index: 1;
}

#advanced-dropdowns {
	position: relative;
	z-index: 20000;
}

.dropdown-menu {
	position: absolute;
	z-index: 80000;
}

#concierge_dropdown.dropdown-menu {
	height: 311px;
	width: 1024px;
	padding: 0;
	border-radius: 0;
	right: -20px;
    top: 36px;
    width: 1018px;
	margin: 0;
	z-index: 20000;
}
.left-concierge {
	background: #e7e7e9;
	width: 33%;
	height: 100%;
	float: left;
}
.left-concierge .concierge-header{
	margin: 0 auto;
	display: block;
}

.left-concierge #drop-concierge-header {
	position:relative;
	width: 289px;
    height: 68px;
    margin: 0 auto;
    padding: 10px 0 0 0;
    color: #fff;
    text-shadow: 1px 1px #666, 1px 1px #444;
    font-size: 20px;
    font-weight: 700;
    text-align: center;
    text-transform: uppercase;
    z-index: 20000;
    overflow: visible;
    background: url('../img/col_header_concierge_bg.png') no-repeat;
}

.left-concierge .blue_number {
	color: #4ea6d3;
	font-size: 24px;
	margin: 5px 5px 0 15px;
	float:left;
}
.left-concierge  p{
	color: #333;
	font-size: 16px;
	float: left;
	width:280px;
	font-family: "Myriad Pro";
	padding: 0 5px 0 0;
}
.right-concierge {
	float: left;
	padding: 10px 10px 25px 17px;
	width: 600px;
}
.right-concierge form {
	margin-top: 25px;
	width: 100%;
}
.right-concierge label {
	color: #4ea6d3;
	font-size: 13px;
	width: 300px;
	font-weight: 700;
}
.right-concierge input {
	width: 299px;
	height: 24px;
	margin: 0 0 20px 0;
}
#concierge_dropdown .right-concierge input[type=image]{
	float: right;
	margin: 10px 0;
	width: 111px;
	height:31px;
}
.right-concierge .float_right {
	float: right;
	width: 40%;
	margin: 0;
}
.right-concierge .float_right textarea {
	height: 162px;
	width: 260px;
}
.right-concierge .float_left {
	float: left;
}
#concierge_dropdown .close {
	float: right;
	font-size: 13px;
	margin: 0 10px 0 0;
}
.left-concierge .dashed-divider {
    border-bottom: 1px dashed hsl(0, 0%, 80%);
    margin: 7px 8px 10px 16px;
    width: 90%;
	float:left;
}

/*** M1024 ***/
@media screen and (max-width: 1024px) {
	.column .col-learn-content, .col-read-content, .col-watch-content, .col-latest-content, .col-industry-content {
		background: none repeat scroll 0 0 #FFFFFF;
	    margin: -34px auto 0;
	    padding: 55px 0 10px 0;
	    width: 320px;
	    z-index: 0;
	}
	.right-concierge .float_left {
		width: 50%;
	}
	.right-concierge .float_right {
		float: right;
		margin: 0 0 0 25px;
	}
	.right-concierge .float_right textarea {
		height: 162px;
		width:280px;
	}
}

/*** M801 ***/
@media screen and (max-width: 801px) {
