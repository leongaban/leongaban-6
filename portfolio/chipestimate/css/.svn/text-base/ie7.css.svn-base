	#advanced_dropdown #advanced_search input[type="image"] { margin: 10px; }
	#concierge_dropdown.dropdown-menu { right: -31px; top: 36px; width: 750px; height: 525px; }
	#concierge_dropdown .left-concierge { width: 48%; height: 100%; }
	#concierge_dropdown .right-concierge { padding: 0; width: 50%; }
	#concierge_dropdown .right-concierge  form{ margin-top: 10px; }
	#concierge_dropdown .right-concierge .float_left { padding: 0 0 0 15px; }
	#concierge_dropdown .right-concierge .float_right { float: left; padding: 0 0 0 10px; margin: 0; }
	.right-concierge input { width: 341px; }
	#concierge_dropdown .right-concierge .float_right textarea { height: 162px; width: 341px; }
	#advanced_dropdown #advanced_search #ip_advanced .ip_option.foundry .ip_check_boxes label { width:167px; }
}

