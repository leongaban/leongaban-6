package src.display // SonyCurtain{	import flash.text.TextField;	import flash.display.Stage;	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.geom.Matrix;	import flash.events.Event;		// ☼ Imported Howdini Classes	import src.model.Fonts;	import src.events.CustomEvent;		// ☼ -------------------------------------------------------------------------------------- PUBLIC CLASS	public class Frame extends Sprite	{		private var sony:MovieClip;		private var touchstorm:MovieClip;		private var topBar:Sprite = new Sprite();		private var footer:Sprite = new Sprite();				// ☼ -------------------------------------------------------------------------------------- Constructor		public function Frame():void			{			this.addEventListener(Event.ADDED_TO_STAGE, tracer);		}				public function tracer(event:Event)		{			this.removeEventListener(Event.ADDED_TO_STAGE, tracer);			dispatchEvent (new CustomEvent(CustomEvent.COMPLETE, {})); // Tell Main Stage Loaded		}				// ☼ -------------------------------------------------------------------------------------- Init		public function init(footCopy:String):void			{			//  Create Header			topBar.graphics.beginFill(0x000);			topBar.graphics.drawRect(0,0,800,54);			topBar.graphics.endFill();				touchstorm   = new Touchstorm;			touchstorm.x = 20;			touchstorm.y = 20;						sony = new Sony;			sony.x = 674;			sony.y = 18;						footer.graphics.beginFill(0x000);			footer.graphics.drawRect(0,0,800,56);			footer.graphics.endFill();			footer.y = stage.stageHeight - footer.height;						var footText:TextField         = new TextField();				footText.defaultTextFormat = Fonts.footerStyle;				footText.embedFonts        = true;				footText.gridFitType       = "PIXEL";				footText.sharpness         = 400				footText.antiAliasType     = flash.text.AntiAliasType.NORMAL;				footText.selectable        = false;				footText.mouseEnabled      = false;				footText.wordWrap          = true;				footText.y                 = 20;				footText.width             = 800;				footText.height            = 30;				footText.text              = footCopy;						// ☼ -------------------------------------------------------------------------------------- Place Header & Footer			footer.addChild(footText);						addChild(topBar);			addChild(touchstorm);			addChild(sony);			addChild(footer);		}			} // end Class	} // end package