package src.display // SonyCurtain{	import flash.display.MovieClip;	import flash.display.Loader;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.net.URLLoader;	import flash.net.URLRequest;		import src.ui.ThumbnailController;	import src.model.Fonts;		// ☼ -------------------------------------------------------------------------------------- PUBLIC CLASS	public class Thumbnail extends ThumbnailController	{		private var row:MovieClip;		private var thumbNailRow:MovieClip;		private var thumbLoader = new Loader();		public var playThumb:MovieClip;		public var playGlow:MovieClip;						// ☼················································································→ CONSTRUCTOR		public function Thumbnail(loop, thumbCopyBold, thumbCopy, thumbImg, spacer) 		{			draw(loop, thumbCopyBold, thumbCopy, thumbImg, spacer);		}				public function draw(loop, thumbCopyBold, thumbCopy, thumbImg, spacer):void		{					thumbNailRow = new EmptyMov;			thumbNailRow.x = 0;			thumbNailRow.y = thumbNailRow.y+spacer;			thumbNailRow.buttonMode = true;			row = new Row;			row.x = 0;			row.y = 0;			row.alpha = 1;										placeImage(thumbImg);			playBtns();			writeCopy(thumbCopyBold, thumbCopy);		}				public function placeImage(thumbImg):void		{			loadImage (thumbImg);		}				function loadImage(url:String):void 		{			thumbLoader = new Loader();			thumbLoader.load(new URLRequest(url));			}				public function playBtns():void		{			playThumb = new PlayThumb;			playThumb.x = 688;			playThumb.y = 69;			playThumb.alpha = 1;			playGlow = new PlayGlow;			playGlow.x = 689;			playGlow.y = 68;			playGlow.alpha = 1;		}				public function writeCopy(thumbCopyBold, thumbCopy):void		{						var thumbTitle:TextField         = new TextField();				thumbTitle.defaultTextFormat = Fonts.titleStyle;				thumbTitle.embedFonts        = true;				thumbTitle.gridFitType       = "PIXEL";				thumbTitle.sharpness         = 100				thumbTitle.antiAliasType     = flash.text.AntiAliasType.NORMAL;				thumbTitle.mouseEnabled      = false;				thumbTitle.x                 = 277;				thumbTitle.y                 = 12;				thumbTitle.width             = 380;				thumbTitle.height            = 40;				thumbTitle.text              = thumbCopyBold;							var thumbText:TextField         = new TextField();				thumbText.defaultTextFormat = Fonts.thumbStyle;				thumbText.embedFonts        = true;				thumbText.gridFitType       = "SUBPIXEL";				thumbText.sharpness         = 100				thumbText.antiAliasType     = flash.text.AntiAliasType.ADVANCED;				thumbText.mouseEnabled      = false;				thumbText.multiline         = true;				thumbText.wordWrap          = true;				thumbText.x                 = 277;				thumbText.y                 = 30;				thumbText.width             = 350;				thumbText.height            = 110;				thumbText.text              = thumbCopy;						// ☼················································································→ Add thumbnail row to stage			thumbNailRow.addChild(row);			thumbNailRow.addChild(thumbLoader);			thumbNailRow.addChild(thumbTitle);			thumbNailRow.addChild(thumbText);			thumbNailRow.addChild(playGlow);			thumbNailRow.addChild(playThumb);			thumbNailRow.addEventListener(MouseEvent.ROLL_OVER, rowRollOver);			thumbNailRow.addEventListener(MouseEvent.ROLL_OUT, rowRollOff);						addChild(thumbNailRow);		}			} // end Class	} // end package