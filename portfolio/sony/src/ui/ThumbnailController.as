package src.ui // SonyCurtain{	import gs.*;	import gs.plugins.*;	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;		import src.model.Navigation;	import src.display.VideoClass;	import src.events.CustomEvent;	// ☼················································································ ¤ ThumbnailController ¤	public class ThumbnailController extends MovieClip	{		private var buildRow = MovieClip;		public var playMe:Number = 1;		private var $video:String;						public function ThumbnailController():void			{			addEventListener(Event.ADDED, init);			TweenPlugin.activate([VisiblePlugin, RemoveTintPlugin, EndArrayPlugin, TintPlugin, FramePlugin, AutoAlphaPlugin, VolumePlugin]);		}				public function init(e:Event):void		{			removeEventListener(Event.ADDED, init);			addEventListener(MouseEvent.CLICK, thumbPlay);		}				private function thumbPlay(e:MouseEvent):void		{			dispatchEvent(new CustomEvent(CustomEvent.CLICK, {button:e.target, movie:$video}, true));		}				public function rowRollOver(e:MouseEvent):void 		{			buttonMode = true;			dispatchEvent(new Event(Event.CHANGE, true ));			TweenPlugin.activate([TintPlugin]);			TweenLite.to(MovieClip(this).playGlow, .3, {alpha:2, tint:0x119dd5});		}				public function rowRollOff(e:MouseEvent):void 		{			buttonMode = false;			dispatchEvent(new Event(Event.CHANGE, true ));			TweenPlugin.activate([TintPlugin]);			TweenLite.to(MovieClip(this).playGlow, .3, {alpha:.7, tint:0x119dd5});		}				// ☼················································································→ Getters & Setters ~~~~~~~		public function set video(value:String):void		{			$video = value;		}			} // end Class	} // end package