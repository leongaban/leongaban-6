package src.ui // SonyCurtain{	import gs.easing.*;	import gs.TweenLite;	import flash.events.MouseEvent;	import flash.display.MovieClip;		// ☼ -------------------------------------------------------------------------------------- Public Class	public class ScrollBar extends MovieClip	{		private var yMin:Number;		private var yMax:Number;		private var yOffset:Number;		private var theTrack:MovieClip;		private var theRoller:MovieClip;		private var rollerGreen:MovieClip;		private var thumbnailTab:MovieClip;				// ☼ -------------------------------------------------------------------------------------- Constructor		public function ScrollBar(myRoller:MovieClip, myTrack:MovieClip, thumbnails:MovieClip, rollerOn:MovieClip):void		{			yMin         = 0;			yMax         = myTrack.height - myRoller.height;			theTrack     = myTrack;			theRoller    = myRoller;			rollerGreen  = rollerOn;			thumbnailTab = thumbnails;			myRoller.addEventListener(MouseEvent.ROLL_OVER, rollerOver);			myRoller.addEventListener(MouseEvent.ROLL_OUT, rollerOut);			myRoller.addEventListener(MouseEvent.MOUSE_DOWN, rollerDown);		}				// ☼ -------------------------------------------------------------------------------------- RollOver		private function rollerOver(e:MouseEvent):void		{			TweenLite.to(rollerGreen, .4, {alpha:1, ease:Strong.easeOut});		}				// ☼ -------------------------------------------------------------------------------------- Roll Out		private function rollerOut(e:MouseEvent):void		{			TweenLite.to(rollerGreen, .4, {alpha:0, ease:Strong.easeOut});		}				// ☼ -------------------------------------------------------------------------------------- Click		private function rollerDown(e:MouseEvent):void		{			stage.addEventListener(MouseEvent.MOUSE_UP, rollerUp);			stage.addEventListener(MouseEvent.MOUSE_MOVE, rollerMove);			yOffset = mouseY - theRoller.y;		}				// ☼ -------------------------------------------------------------------------------------- Mouse Up		private function rollerUp(e:MouseEvent):void		{			stage.removeEventListener(MouseEvent.MOUSE_MOVE, rollerMove);		}		// ☼ -------------------------------------------------------------------------------------- Mouse Move		private function rollerMove(e:MouseEvent):void		{			theRoller.y = mouseY - yOffset;			 			if(theRoller.y <= yMin)				theRoller.y = yMin;			if(theRoller.y >= yMax)				theRoller.y = yMax;							var sp:Number = theRoller.y / yMax; // % the roller is down the track						//Tweener.addTween(thumbnailTab, {y:((-sp*(thumbnailTab.height-theTrack.height))+60),time:2}); // +60 compensates for the min Y being 60			TweenLite.to(thumbnailTab, 2, {y:((-sp*(thumbnailTab.height-theTrack.height))+94), ease:Strong.easeOut}); // +60 compensates for the min Y being 60						e.updateAfterEvent();		}			} // end Class	} // end package