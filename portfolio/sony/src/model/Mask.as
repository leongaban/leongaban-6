package src.model // SonyCurtain{  	import flash.display.Sprite;   	public class Mask extends Sprite  	{  		private var xPos:Number;  		private var yPos:Number;		private var mWidth:Number;		private var mHeight:Number;		private var color:uint;		private var photoMask:Sprite = new Sprite();	   		public function Mask(xPos:Number, yPos:Number, mWidth:Number, mHeight:Number, color:uint)		{  			photoMask.graphics.clear();			photoMask.graphics.beginFill(color, 1);			photoMask.graphics.drawRect(xPos, yPos, mWidth, mHeight);			photoMask.graphics.endFill();						addChild(photoMask);		}			} // end Class	} // end package